<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:fondomerende"
    x:Class="fondomerende.LoginPage"
         xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
            ios:Page.UseSafeArea="true"
    BackgroundColor="{OnPlatform Android={StaticResource ColorBackground}, iOS={StaticResource ColorBackground}, Default=#FF9900}"><!--FFCC00-->


    <Grid>
        <Grid
            Margin="{OnIdiom Phone=20, Default=100}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="CenterAndExpand">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image
                Margin="40"
                Grid.Row="0"
                Grid.Column="0"      
                Scale="{OnIdiom Phone=1.8, Tablet=1.5}"
                x:Name ="Fondo_Merende_logo"
                Aspect="AspectFit">
            </Image>

            <Entry
                Grid.Row="2"
                Grid.Column="0"
                x:Name="usernameEntry"
                Text="StefanoVe"
                Placeholder="Username">
            </Entry>

            <Entry
                Grid.Row="3"
                Grid.Column="0"
                x:Name="passwordEntry"
                Text="pw"
                Placeholder="Password"
                IsPassword="True">
            </Entry>

            <StackLayout
                HorizontalOptions="CenterAndExpand"
                Orientation="Horizontal"
                Grid.Row="5"
                Grid.Column="0">

                <Button
                    HorizontalOptions="FillAndExpand"
                    Grid.Column="0"
                    Margin="5"
                    Clicked="Bottone_ClickedAsync"
                    x:Name="bottone"
                    Text="Log in"
                    Style="{OnPlatform Android={StaticResource FondomerendeButton}}">
                </Button>


                <Button
                    HorizontalOptions="FillAndExpand"
                    Margin="5"
                    Clicked="RegisterButton_ClickedAsync"
                    x:Name="Register"
                    Text="Sign up"
                    Style="{OnPlatform Android={StaticResource FondomerendeButton}}">
                </Button>
            </StackLayout>

            <StackLayout
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Grid.Row="7"
                Grid.Column="0">
           
                <StackLayout
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="25"
                    HeightRequest="25"
                    BackgroundColor="White"
                    x:Name="CheckBox">
                </StackLayout>

                <Button
                    Clicked="RememberMeButton_Clicked"
                    x:Name="RememberMe_Button"
                    Text="Ricordami"
                    Style="{OnPlatform Android={StaticResource FondomerendeButton}}">
                </Button>
            </StackLayout>
        </Grid>
    </Grid>


</ContentPage>
