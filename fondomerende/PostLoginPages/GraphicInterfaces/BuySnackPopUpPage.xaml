<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage 
     xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    x:Class="fondomerende.PostLoginPages.GraphicInterfaces.BuySnackPopUpPage"
    xmlns:local ="clr-namespace:fondomerende"
    xmlns:Graph="clr-namespace:fondomerende.PostLoginPages.GraphicInterfaces"
    HasKeyboardOffset="False">
    <!--You can set an animation in the xaml file or in the csharp code behind-->
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation 
          PositionIn="Center"
          PositionOut="Center"
          ScaleIn="1.2"
          ScaleOut="0.8"
          DurationIn="400"
          DurationOut="300"
          EasingIn="SinOut"
          EasingOut="SinIn"
          HasBackgroundAnimation="True"/>
        </pages:PopupPage.Animation>
    <!--You can use any elements here which are extended from Xamarin.Forms.View-->
    <Graph:RoundedCornerView 
        RoundedCornerRadius="20"                          
        HeightRequest="100" Margin="30,310,30,310"
        WidthRequest="300" 
        BackgroundColor="White">
        
        <StackLayout 
            Orientation="Horizontal" 
            VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0">
                <Label Text="Quanti Snack vuoi acquistare?">
                </Label>
                <local:LineEntry WidthRequest="20" MaxLength="2" x:Name="QtaEntry" Keyboard="Numeric">
                </local:LineEntry>
        </StackLayout>
            <Label Margin="0,40,0,0" x:Name="ErrorLabel" TextColor="Red" Text=" " HorizontalOptions="Center">
            </Label>
        <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand" Spacing="90" Padding="0,0,0,0" Margin="0,0,0,0">
            <Button Text="Annulla" VerticalOptions="EndAndExpand" FontSize="20" HorizontalOptions="Center" x:Name="Discard" Clicked="Discard_Clicked">
            </Button>
            <Button Text="Acquista" VerticalOptions="EndAndExpand" HorizontalOptions="Center" FontSize="20" x:Name="Apply" Clicked="Apply_Clicked" >
            </Button>
        </StackLayout>
    </Graph:RoundedCornerView>
</pages:PopupPage>