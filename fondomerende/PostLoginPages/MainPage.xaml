<?xml version="1.0" encoding="utf-8"?>
<TabbedPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:fondomerende.PostLoginPages"
    x:Class="fondomerende.PostLoginPages.MainPage"
    SelectedTabColor="{OnPlatform Android = White}"
    UnselectedTabColor="{OnPlatform Android = Gray}"
    BackgroundColor="{StaticResource ColorSnackBackground}"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="true">

    <NavigationPage
        Title="Snacks"
        ios:NavigationPage.IsNavigationBarTranslucent="True"
        IconImageSource="fondomerende.image.vm_icon_51x51.png" 
        x:Name="SnacksNavPage"
        BarBackgroundColor="{OnPlatform iOS=OrangeRed}"
        ios:NavigationPage.PrefersLargeTitles="True">
        <x:Arguments>
            <local:AllSnacksPage />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage 
        Title="Impostazioni" 
        x:Name="SettingsNavPage"
        ios:NavigationPage.PrefersLargeTitles="True"
        ios:NavigationPage.IsNavigationBarTranslucent="True"
        BarTextColor="{OnPlatform iOS='White'}"
        BarBackgroundColor="{OnPlatform iOS=OrangeRed}">
        <x:Arguments>
            <local:InformationPage />
        </x:Arguments>
    </NavigationPage>



</TabbedPage>