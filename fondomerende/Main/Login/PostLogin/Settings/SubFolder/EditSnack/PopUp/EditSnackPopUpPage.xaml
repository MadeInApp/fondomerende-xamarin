<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage   xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:fondomerende.Main.Utilities"
                    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
                    mc:Ignorable="d"
                    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                    x:Class="fondomerende.Main.Login.PostLogin.Settings.SubFolder.EditSnack.PopUp.EditSnackPopUpPage"
                   HasKeyboardOffset="False">
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation 
          PositionIn="Center"
          PositionOut="Center"
          ScaleIn="1.2"
          ScaleOut="0.8"
          DurationIn="200"
          DurationOut="200"
          EasingIn="SinOut"
          EasingOut="SinIn"
          HasBackgroundAnimation="True"/>
    </pages:PopupPage.Animation>
    <!--You can use any elements here which are extended from Xamarin.Forms.View-->
    <local:RoundedCornerView 
        RoundedCornerRadius="20" 
        Margin="30,250,30,250">
        <Label HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" Text="Fondo Merende" FontAttributes="Bold"/>
        <StackLayout
            Margin="30,0,0,30">
            <local:LineEntry x:Name ="idSnack">
            </local:LineEntry>
            <local:LineEntry x:Name ="NomeSnack">
            </local:LineEntry>
            <local:LineEntry x:Name ="PrezzoSnack">
            </local:LineEntry>
            <local:LineEntry x:Name ="SnackPerBox">
            </local:LineEntry>
            <local:LineEntry x:Name ="ExpInDays">
            </local:LineEntry>
            <local:LineEntry x:Name ="Qta">
            </local:LineEntry>
            
        </StackLayout>
    </local:RoundedCornerView>
    </pages:PopupPage>