<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage 
     xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    x:Class="fondomerende.Main.Login.PostLogin.Settings.SubFolder.BuySnack.Popup.BuySnackPopUpPage"
    xmlns:local ="clr-namespace:fondomerende.Main.Utilities"
    xmlns:Graph="clr-namespace:fondomerende.Main.Utilities"
    HasKeyboardOffset="False">
    <!--You can set an animation in the xaml file or in the csharp code behind-->
    <pages:PopupPage.Animation>
        <animations:ScaleAnimation 
          PositionIn="Center"
          PositionOut="Center"
          ScaleIn="1.2"
          ScaleOut="0.8"
          DurationIn="200"
          DurationOut="200"
          EasingIn="SinOut"
          EasingOut="SinIn"
          HasBackgroundAnimation="True"/>
        </pages:PopupPage.Animation>
    <!--You can use any elements here which are extended from Xamarin.Forms.View-->
    <Graph:RoundedCornerView 
        RoundedCornerRadius="20" 
        HeightRequest="{OnPlatform Android=50, iOS=50}"
        WidthRequest="{OnPlatform Android=200, iOS=200}"
        Margin="30,180,30,180"
         >

        <StackLayout 
            BackgroundColor="White">
            <Label HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" Text="Fondo Merende" FontAttributes="Bold">
            </Label>

            <StackLayout 
                Orientation="Horizontal" 
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                Margin="0,10,0,0"
               >
            
                <Label 
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand"
                    Margin="5,5,5,-10"
                    Text="Quanti Snack vuoi acquistare?"
                    FontSize="18">
                    
                </Label>
            
                
            
            </StackLayout>
            <local:LineEntry 
                    Margin="120,0,120,0"
                    WidthRequest="30" 
                    VerticalOptions="Center"
                    MaxLength="2" 
                    HorizontalTextAlignment="Center"
                    x:Name="QtaEntry" 
                    Keyboard="Numeric">
            </local:LineEntry>
            <Label 
                Margin="0,40,0,0" 
                x:Name="ErrorLabel" 
                TextColor="Red"
                Text=" " 
                HorizontalOptions="Center">
            </Label>
        
            <StackLayout 
                Orientation="Horizontal" 
                VerticalOptions="EndAndExpand" 
                HorizontalOptions="CenterAndExpand"
                Spacing="90" 
                Padding="0,0,0,0" 
                Margin="0,0,0,0">
            
                <Button 
                    Text="Annulla" 
                    VerticalOptions="EndAndExpand"
                    FontSize="14" 
                    HorizontalOptions="FillAndExpand" 
                    x:Name="Discard" 
                    Margin="0,0,0,10"
                    Clicked="Discard_Clicked"
                    Style="{StaticResource FondomerendeButton}">
                </Button>
                <Button 
                    Text="Acquista" 
                    VerticalOptions="EndAndExpand" 
                    HorizontalOptions="FillAndExpand" 
                    FontSize="14" 
                    x:Name="Apply" 
                    Margin="0,0,0,10"
                    Clicked="Apply_Clicked" 
                    Style="{StaticResource FondomerendeButton}">
                </Button>
            </StackLayout>
        </StackLayout>
    </Graph:RoundedCornerView>
</pages:PopupPage>