<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local2="clr-namespace:fondomerende.Main.Utilities"
             x:Class="fondomerende.Main.Login.PostLogin.AllSnack.Page.AllSnacksPage"
             xmlns:local="clr-namespace:fondomerende.Main.Utilities"
             BackgroundColor="{OnPlatform Android= {StaticResource ColorSnackBackground}, iOS= 'White'}"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:local1="clr-namespace:fondomerende.Main.Login.PostLogin.AllSnacks.View"
             ios:Page.UseSafeArea="True"
             Title="{OnPlatform iOS='Snacks'}">
    <ContentPage.Content>
        <StackLayout
            x:Name="StackSnack">
            <StackLayout Orientation="Horizontal" HeightRequest="45" Margin="10,0,0,0">
                <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer 
                            Tapped="OnButtonTapped" 
                            NumberOfTapsRequired="1" >
                        </TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                    <ImageButton 
                    Margin="10,0,0,0"
                    Source="{local:EmbeddedImage Resource=fondomerende.image.deposit_256x256.png}"
                    BackgroundColor="White"
                    Scale="0.8"
                    HorizontalOptions="StartAndExpand">
                        </ImageButton>
                        <Label Text="Deposita" Margin="-15,0,0,0" VerticalOptions="CenterAndExpand" Scale="0.8">
                        </Label>
                    </StackLayout>
                    <ImageButton 
                    Margin="0,10,10,0"
                    CornerRadius="5"
                    WidthRequest="35"
                    HeightRequest="30"
                    HorizontalOptions="EndAndExpand" 
                    VerticalOptions="StartAndExpand" 
                    BackgroundColor="White"
                    Source="{local2:EmbeddedImage Resource=fondomerende.image.list_264x264.png}"
                    Scale="{OnIdiom Phone=0.8, Tablet=3}"
                    Clicked="Swap_Clicked"
                    x:Name="Swap">
                </ImageButton>
            </StackLayout>
            <ScrollView IsVisible="True" x:Name="ScrollView" Margin="0,0,0,10" Padding="0,0,0,20">
                <Grid
                    HorizontalOptions="CenterAndExpand"
                    x:Name="GridView" 
                    ColumnSpacing="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackLayout 
                        Grid.Column="0" 
                        x:Name="Column0"
                        Spacing="40"
                        HorizontalOptions="StartAndExpand">
                    </StackLayout>
                    <StackLayout 
                        WidthRequest="120"
                        Grid.Column="1" 
                        x:Name="Column1"
                        Spacing="40"
                        HorizontalOptions="EndAndExpand">
                    </StackLayout>
                </Grid>
            </ScrollView>
            <ListView
                Margin="0,0,0,10"
                x:Name="ListView"
                IsPullToRefreshEnabled="true"
                RefreshCommand="{Binding RefreshCommand}"
                ItemSelected="ListView_ItemSelected"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                IsVisible="False"
                HasUnevenRows="True">
            <ListView.ItemTemplate>
                    <DataTemplate>
                        <local1:SnackViewCell x:Name="SnackCell"> </local1:SnackViewCell> 
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>